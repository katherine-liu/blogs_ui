<form>
  <div class="form-group">
    <div class="">
      <input id="upload" multiple="true" onchange={{action "displayImg"}} accept="image/png,image/jpeg,application/pdf" type="file"/>
      <div><img id="previewImage" atl="Image"></div>
    </div>
    <label for="title">Title</label>
    {{input value=title class="form-control"}}
    <small class="form-text text-muted">Please input the blog title.</small>
  </div>
  <div class="form-group">
    <label for="content">Blog</label>
    {{textarea value=content class="form-control"}}
  </div>
  <button {{action "addBlog"}} class="btn btn-primary float-right">Submit</button>
</form>
