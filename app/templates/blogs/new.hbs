<form>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" placeholder="Title">
    <small id="title" class="form-text text-muted">Please input the blog title.</small>
  </div>
  <div class="form-group">
    <label for="content">Password</label>
    <textarea class="form-control" id="content" rows="10" placeholder="Tell us something fun."></textarea>
  </div>
  <button {{action 'addBlog'}} class="btn btn-primary float-right">Submit</button>
</form>
