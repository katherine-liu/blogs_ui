<form>
  <div class="form-group">
    <input id="upload" multiple="true" onchange={{action "displayImg"}} accept="image/png,image/jpeg,application/pdf" type="file"/>
    <div><img id="previewImage" src={{model.request.url}} atl="Image"></div>
    <label for="title">Title</label>
    {{input value=model.title class="form-control"}}
    <small class="form-text text-muted">Please input the blog title.</small>
  </div>
  <div class="form-group">
    <label for="content">Blog</label>
    {{textarea value=model.content class="form-control"}}
  </div>
  <button {{action "updateBlog" model}} class="btn btn-primary float-right">Update</button>
</form>
